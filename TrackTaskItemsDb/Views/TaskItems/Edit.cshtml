    .error {
        color: #F00;
        background-color: #FFF;
    }

    .navbar {
        background-color: #a9be41;
    }
</style>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editItemform" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center;background:#0065A2; color:white"> Update Item</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CreatedBy)
        @Html.HiddenFor(model => model.CreatedDate)

        <div class="form-group">
            @Html.LabelFor(model => model.Status, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Status", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsMandate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div id="IsMandate">
                    @if (Model.IsMandate)
                    {
                        <label>Yes</label>
                        <input name="IsMandate" id="MandateYes" type="radio" value="true" checked />
                        <label>No</label>
                        <input name="IsMandate" id="MandateNo" type="radio" value="false" />
                    }
                    else
                    {
                        <label>Yes</label>
                        <input name="IsMandate" id="MandateYes" type="radio" value="true" />
                        <label>No</label>
                        <input name="IsMandate" id="MandateNo" type="radio" value="false" checked />
                    }
                </div>
            </div>
        </div>

        <div class="form-group" id="mandDate">
            @Html.LabelFor(model => model.MandateDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MandateDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MandateDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="mandComment">
            @Html.LabelFor(model => model.MandateComment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.MandateComment, new { rows = 3, columns = 40, htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MandateComment, "", new { @class = "text-danger" })
                <div>@Html.Raw("25 maximun characters")</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Action, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Action, new { rows = 4, columns = 60, htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Action, "", new { @class = "text-danger" })
                <div>@Html.Raw("250 maximun characters")</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IT_Project_Number, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IT_Project_Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IT_Project_Number, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            @Html.LabelFor(model => model.CompletedDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CompletedDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CompletedDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Budget Impact", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BudgetImpact, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BudgetImpact, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.Outcome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Outcome, new { rows = 6, columns = 80, htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Outcome, "", new { @class = "text-danger" })
                <div>@Html.Raw("500 maximun characters")</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StrategicPillarId, "Strategic Pillar", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StrategicPillarId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StrategicPillarId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Save" class="btn btn-default" style="background:#0065A2; color:white" />
                &nbsp;
                <button type="button" class="btn btn-info" style="background-color:#a9be41">
                    @Html.ActionLink("Cancel", "Details", "ItemDepartments", new { id = Model.Id }, new { @style = "color:white;" })
                </button>
            </div>
        </div>


    </div>

}

