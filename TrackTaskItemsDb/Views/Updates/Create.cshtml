@model TrackTaskItemsDb.Models.Update

@{
    ViewBag.Title = "Create";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Update</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.UpdateNotes, htmlAttributes: new { @class = "control-label col-md-2" })

        @Html.TextAreaFor(model => model.UpdateNotes, new { rows = 10, columns = 2000, htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UpdateNotes, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">

        @Html.Hidden("TaskItemId", null, htmlAttributes: new { @class = "form-control" })
        @Html.Hidden("UserId", null, htmlAttributes: new { @class = "form-control" })

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>

}


@foreach (var item in ViewBag.TaskItemId.Items)
{

    <div>
        @Html.ActionLink("Back to Detail", "Details", "ItemDepartments", new { id = item }, null)
    </div>
}

